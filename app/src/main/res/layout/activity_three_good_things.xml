<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 GOOD THINGS"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="良かったことを3つ絞り出してください。"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/edit_good_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1つ目の良かったこと"
        android:backgroundTint="#000000"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/edit_good_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="2つ目の良かったこと"
        android:backgroundTint="#000000"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/edit_good_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="3つ目の良かったこと"
        android:backgroundTint="#000000"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完了（脳をアップデート）"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF" />

</LinearLayout>